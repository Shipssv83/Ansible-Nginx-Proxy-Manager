# Nginx Proxy Manager settings
NGINX_VERSION=latest
ADMIN_EMAIL={{ email }}
ADMIN_PASSWORD={{ nginx_mysql_pass_web }}
RESOLVER_ADDRESS=1.1.1.1
SERVER_NAME={{ nginx_pm_host_name }}

# MySQL settings
MYSQ_VERSION=5.7
DB_MYSQL_HOST=db
DB_MYSQL_PORT=3306
DB_MYSQL_USER={{ nginx_mysql_user }}
DB_MYSQL_PASSWORD={{ nginx_mysql_pass }}
DB_MYSQL_NAME={{ nginx_mysql_name }}
MYSQL_ROOT_PASSWORD={{ nginx_mysql_root_pass }}
MYSQL_DATABASE={{ nginx_mysql_name }}
MYSQL_USER={{ nginx_mysql_user }}
MYSQL_PASSWORD={{ nginx_mysql_pass }}
